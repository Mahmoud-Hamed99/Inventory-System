@model Inventory_System.Models.Vendor

@{
    ViewBag.Title = "حذف بيانات المورد";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>حذف بيانات المورد</h2>

<h3>هل تريد الحذف؟</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt class="text-right">
            @Html.DisplayName("اسم المورد")
        </dt>

        <dd class="text-right">
            @Html.DisplayFor(model => model.VendorName)
        </dd>

        <dt class="text-right">
            @Html.DisplayName("الهاتف")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VendorPhone)
        </dd>

        <dt class="text-right">
            @Html.DisplayName("تاريخ الاصدار")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-default" /> |
            @Html.ActionLink("الرجوع لقائمه الموردين", "Index")
        </div>
    }
</div>
