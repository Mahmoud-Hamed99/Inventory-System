@model Inventory_System.Models.ItemSubCategory

@{
    ViewBag.Title = "تعديل البيانات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>تعديل البيانات</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>ItemSubCategory</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ItemSubCategoryId)

    <div class="form-group">
        <div class="col-md-10  text-right">
            @Html.EditorFor(model => model.ItemSubCategoryName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ItemSubCategoryName, "", new { @class = "text-danger" })
        </div>
        @Html.Label("اسم الصنف الفرعي", htmlAttributes: new { @class = "control-label col-md-2" })

    </div>

    <div class="form-group">
        <div class="col-md-10 text-right">
            @Html.DropDownList("ItemCategoryId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ItemCategoryId, "", new { @class = "text-danger" })
        </div>
        @Html.Label("اسم الصنف", htmlAttributes: new { @class = "control-label col-md-2" })

    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("الرجوع لقائمه الأصناف", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
