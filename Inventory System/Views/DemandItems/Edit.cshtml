@model Inventory_System.Models.DemandItem

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutDemand.cshtml";
}

<h2>تعديل بيانات الصنف المطلوب</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>DemandItem</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DemandItemId)

        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("ItemId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ItemId, "", new { @class = "text-danger" })
            </div>
            @Html.Label("اسم الصنف", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.DemandItemQuantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DemandItemQuantity, "", new { @class = "text-danger" })
            </div>
            @Html.Label("الكميه المطلوبه", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <div class="input-group date" id="requestDateTimePicker" data-target-input="nearest">
                    <div class="input-group-append" data-target="#requestDateTimePicker" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class="far fa-clock"></i></div>
                        @Html.EditorFor(model => model.DateCreated, new { htmlAttributes = new { @class = "form-control datetimepicker-input", data_target = "#requestDateTimePicker" } })
                    </div>
                </div>
                @*@Html.EditorFor(model => model.DemandItemPriority , new { htmlAttributes = new { @class = "form-control" } })*@
                @*@Html.ValidationMessageFor(model => model.DemandItemPriority, "", new { @class = "text-danger" })*@
            </div>
            @Html.Label("الأولويه", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.DemandItemApproval)
                    @Html.ValidationMessageFor(model => model.DemandItemApproval, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.Label("الموافقة", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @* @Html.ActionLink("Back to List", "Index")*@
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/moment.min.js"></script>
    <link href="~/Content/css/cs.css" rel="stylesheet" />
    <script src="~/Scripts/dt.js"></script>
    <script>
    $(document).ready(function () {
        $(function () {
            $('#requestDateTimePicker').datetimepicker({
                // time: "far fa-clock",
                format: 'DD-MM-YYYY',
                defaultDate: new Date()

            });
        });
    });
</script>
}
