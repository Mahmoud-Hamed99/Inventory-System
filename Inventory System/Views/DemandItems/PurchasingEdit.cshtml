@model Inventory_System.Models.DemandItem

@{
    ViewBag.Title = "PurchasingEdit";
    Layout = "~/Views/Shared/_LayoutPurchasing.cshtml";
}

@*<h2>PurchasingEdit</h2>*@


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @*<h4>DemandItem</h4>*@
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.DemandItemId)
    @Html.HiddenFor(model => model.ItemOutputId)
    @Html.HiddenFor(model => model.DateCreated)
    @Html.HiddenFor(model => model.DemandItemQuantity)
    @Html.HiddenFor(model => model.DemandItemApproval)
    @Html.HiddenFor(model => model.DemandItemPriority)


    <div class="form-group">
        <div class="col-md-10">
            @Model.ItemOutput.Item.ItemName

        </div>
        @Html.Label("اسم الصنف", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.DemandItemQuantity)
        </div>
        @Html.Label("الكميه المطلوبه", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>



    <div class="form-group">
        <div class="col-md-10">
            <div class="input-group date" id="requestDateTimePicker" data-target-input="nearest">
                <div class="input-group-append" data-target="#requestDateTimePicker" data-toggle="datetimepicker">

                    @Model.DemandItemPriority.ToShortDateString()
                </div>
            </div>


        </div>
        @Html.Label("الأولويه", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.PurchasingApproval)
                @Html.ValidationMessageFor(model => model.PurchasingApproval, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.Label("موافقه الPurchasing", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("العودة لسجل المشتريات", "purchasingapproval")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
