@model Inventory_System.Models.DemandItem

@{
    ViewBag.Title = "PurchasingEdit";
    Layout = "~/Views/Shared/_LayoutPurchasing.cshtml";
}

<h2>PurchasingEdit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @*<h4>DemandItem</h4>*@
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.DemandItemId)
    @Html.HiddenFor(model => model.DemandItemApproval)


    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownList("ItemId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ItemId, "", new { @class = "text-danger" })
        </div>
        @Html.Label("اسم الخامة", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.DemandItemQuantity, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DemandItemQuantity, "", new { @class = "text-danger" })
        </div>
        @Html.Label("الكمية", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>

    @*<div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.DemandItemPriority, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DemandItemPriority, "", new { @class = "text-danger" })
            </div>
            @Html.Label("الأولوية", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>*@


    <div class="form-group">
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.PurchasingApproval)
                @Html.ValidationMessageFor(model => model.PurchasingApproval, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.Label("موافقه الPurchasing", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("العودة لسجل المشتريات", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
