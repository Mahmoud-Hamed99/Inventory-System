@model Inventory_System.Models.ItemOutput

@{
    ViewBag.Title = "تعديل بيانات التصريح";

    var currentRole = ((Inventory_System.Models.User)ViewBag.mainUser).Roles;
    if (currentRole != "projectplanning")
    {
        Layout = "~/Views/Shared/_LayoutTechnical.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutPlanning.cshtml";
    }
}

<h2>تعديل بيانات التصريح</h2>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>ItemOutput</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ItemOutputId)
        @Html.HiddenFor(model => model.Item.ItemName)
        @Html.HiddenFor(model => model.Project.ProjectName)

        <div class="form-group">
            <div class="col-md-10 text-right">
                @Html.DropDownList("ProjectId", null, htmlAttributes: new { @class = "form-control", @id = "ProjectId" })
                @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })
            </div>
            @Html.Label("كود المشروع", htmlAttributes: new { @class = "control-label col-md-2" })


        </div>

        <div class="form-group">
            <div class="col-md-10 text-right">
                @Html.DropDownList("DepartmentId", null, htmlAttributes: new { @class = "form-control", @id = "DepartmentId" })
                @Html.ValidationMessageFor(model => model.TechnicalDepartmentId, "", new { @class = "text-danger" })
            </div>
            @Html.Label("القسم", htmlAttributes: new { @class = "control-label col-md-2" })


        </div>


        <div class="form-group">
            <div class="col-md-10 text-right">
                @Html.DropDownList("ItemId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ItemId, "", new { @class = "text-danger" })
            </div>
            @Html.Label("إسم الخامة", htmlAttributes: new { @class = "control-label col-md-2" })

        </div>


        <div class="form-group">
            <div class="col-md-10 text-right">
                @Html.EditorFor(model => model.ItemOutputQuantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ItemOutputQuantity, "", new { @class = "text-danger" })
            </div>
            @Html.Label("الكميه", htmlAttributes: new { @class = "control-label col-md-2" })

        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@*<div>
    @Html.ActionLink("الرجوع لقائمه الأذونات", "Index")
</div>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
    $("#ProjectId").select2({
        placeholder: "اختر مشروع",
        allowClear: true
    });
</script>
<script>
    $("#DepartmentId").select2({
        placeholder: "اختر القسم",
        allowClear: true
    });
</script>
